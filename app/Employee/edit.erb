<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @employee.name %></h1>
    <a href="<%= url_for :action => :show, :id => @employee.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @employee.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @employee.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="employee[name]" class="fieldLabel">Name</label>
            <input type="text" id="employee[name]" name="employee[name]" value="<%= @employee.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="employee[age]" class="fieldLabel">Age</label>
            <input type="text" id="employee[age]" name="employee[age]" value="<%= @employee.age %>" <%= placeholder( "Age" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
